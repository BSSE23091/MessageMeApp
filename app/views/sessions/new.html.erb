<% if flash[:alert] %>
  <div class="ui negative message">
    <%= flash[:alert] %>
  </div>
<% elsif flash[:notice] %>
  <div class="ui positive message">
    <%= flash[:notice] %>
  </div>
<% end %>

<h2 class="ui center aligned icon header">
  <i class="circular orange users icon"></i>
  Welcome to messageMe â€” a complete chat app
</h2>

<div class="ui centered stackable grid" style="margin-top: 40px;">
  <div class="sixteen wide mobile twelve wide tablet ten wide computer column"> 
    <div class="ui placeholder segment">
      <div class="ui two column very relaxed stackable grid">

        <!-- Login Column -->
        <div class="column">
          <%= form_with url: login_path, local: true, class: "ui form" do |f| %>
            <div class="field">
              <label>Username</label>
              <div class="ui left icon input">
                <%= f.text_field :username, placeholder: "Username" %>
                <i class="user icon"></i>
              </div>
            </div>

            <div class="field">
              <label>Password</label>
              <div class="ui left icon input">
                <%= f.password_field :password, placeholder: "Password" %>
                <i class="lock icon"></i>
              </div>
            </div>

            <%= f.submit "Login", class: "ui blue submit button orange" %>
          <% end %>
        </div>

        <!-- Signup Column -->
       <div class="middle aligned column">
            <%= link_to new_user_path, class: "ui big button orange" do %>
                <i class="signup icon"></i> Sign Up
            <% end %>
        </div>


      </div>

      <div class="ui vertical divider">
        Or
      </div>
    </div>
  </div>
</div>
